@{ViewData["Title"] = "Registre-se";}

<div class="mt-10 flex items-center justify-center bg-gray-200">
    <form asp-action="Register" method="post" class="w-full max-w-sm rounded-lg bg-white p-8 shadow-md">
        <h2 class="mb-4 text-center text-3xl font-bold text-gray-900">Seja bem-vindo. Registre-se</h2>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="name">Nome de Usuário: </label>
            <input type="text" name="name" required class="form-input mt-1 block w-full rounded-md border-gray-300 bg-gray-200" />
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="email">Email: </label>
            <input type="email" name="email" required class="form-input mt-1 block w-full rounded-md border-gray-300 bg-gray-200" />
        </div>

        <div class="mb-4">
            <label class="mb-2 block text-sm font-bold text-gray-700" for="password">Senha: </label>
            <input type="password" name="password" required class="form-input mt-1 block w-full rounded-md border-gray-300 bg-gray-200" />
        </div>

        <div class="mb-4">
            <label class="mb-2 flex items-center text-sm font-bold text-gray-700">
                <input type="checkbox" name="checkbox" class="form-checkbox"/>
                <span class="ml-2">Sou fornecedor</span>
            </label>
        </div>

        <div class="mb-4 text-center">
            <p class="text-gray-700">Já possui uma conta ? <a asp-controller="Account" asp-action="Index" class="text-yellow-500 hover:text-yellow-700">Entrar</a></p>
        </div>

        <button type="submit" class="w-full cursor-pointer rounded bg-yellow-400 px-4 py-2 font-bold text-white hover:bg-yellow-500 focus:outline-none focus:shadow-outline">Register</button>
    </form>
</div>
